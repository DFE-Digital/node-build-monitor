doctype html
html
    head
        meta(http-equiv='X-UA-Compatible', content='IE=9; IE=8; IE=EDGE')
        meta(name='mobile-web-app-capable', content='yes')
        meta(name='viewport', content='width=device-width, height=device-height, initial-scale=0.3')

        title= title
        link(rel='stylesheet', href='/stylesheets/base/style.css')
        link#basic-favicon(href='/images/favicon.png', rel='icon')
        script(src="https://cdn.jsdelivr.net/npm/bubbly-bg@0.2.2/dist/bubbly-bg.js")


        block scripts

    body.carbon-background
        canvas#container(height='1' width='1' style='position:absolute')
        video.videobg(src='media/video.mp4', poster='media/video.jpg', autoplay='', loop='', muted='')
          source(src='/media/video.webm', type='video/web')
          source(src='/media/video.mp4', type='video/mp4')
        block content
        script(src="/scripts/index3.min.js")
